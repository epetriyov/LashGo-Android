<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lashgo.android">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- GCM Permissions-->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <permission android:name="com.lashgo.android.permission.C2D_MESSAGE"
                android:protectionLevel="signature"/>
    <uses-permission android:name="com.lashgo.android.permission.C2D_MESSAGE"/>

    <!-- make check photo permissions -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-feature
            android:name="android.hardware.camera"
            android:required="false"/>

    <application
            android:name=".LashgoApplication"
            android:icon="@drawable/ic_lashgo"
            android:logo="@drawable/ic_logo"
            android:label="@string/app_name"
            android:theme="@style/Theme.LashGo"
            >

        <meta-data
                android:name="com.facebook.sdk.ApplicationId"
                android:value="@string/facebook_app_id"/>

        <activity android:name="com.facebook.LoginActivity"
                  android:label="@string/login"
                  android:screenOrientation="portrait"
                />

        <activity android:name="com.vk.sdk.VKOpenAuthActivity"
                />

        <activity android:name="com.lashgo.android.ui.auth.TwitterAuthActivity"
                  android:screenOrientation="portrait"
                />

        <activity android:name=".ui.auth.LoginActivity"
                  android:launchMode="singleTop"
                  android:label="@string/login_enter"
                  android:parentActivityName=".ui.start.SplashActivity"
                  android:screenOrientation="portrait"
                >
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.start.SplashActivity"/>
            >
        </activity>

        <activity android:name=".ui.main.MainActivity"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.auth.PasswordRecoverActivity"
                  android:parentActivityName=".ui.auth.LoginActivity"
                  android:screenOrientation="portrait"
                >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.auth.LoginActivity"/>
            >
        </activity>

        <activity android:name=".ui.auth.SuccessfulRegisterActivity"
                  android:screenOrientation="portrait"
                />

        <activity android:name=".ui.check.PhotoSentActivity"
                  android:screenOrientation="portrait"
                />

        <activity android:name=".ui.profile.ProfileActivity"
                  android:launchMode="singleTask"
                  android:theme="@style/Theme.LashGo.TransparentActionBar"
                  android:screenOrientation="portrait"
                />

        <activity android:name=".ui.comments.CommentsActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/comments"
                />

        <activity android:name=".ui.profile.EditProfileActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/edit"
                />

        <activity android:name=".ui.start.SplashActivity"
                  android:screenOrientation="portrait"
                />

        <activity android:name=".ui.check.PhotoActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/Theme.LashGo.TransparentActionBar"
                />

        <activity android:name=".ui.check.CheckActiveActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/task"
                  android:parentActivityName=".ui.main.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.main.MainActivity"/>
            >
        </activity>

        <activity android:name=".ui.check.CheckFinishedActivity"
                  android:label="@string/task"
                  android:parentActivityName=".ui.main.MainActivity"
                  android:screenOrientation="portrait"
                >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.main.MainActivity"/>
            >
        </activity>

        <activity android:name=".ui.check.CheckVoteActivity"
                  android:label="@string/task"
                  android:parentActivityName=".ui.main.MainActivity"
                  android:screenOrientation="portrait"
                >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.main.MainActivity"/>
            >
        </activity>

        <activity android:name=".ui.check.VoteProcessActivity"
                  android:label="@string/task"
                  android:parentActivityName=".ui.check.CheckVoteActivity"
                  android:screenOrientation="portrait"
                >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.check.CheckVoteActivity"/>
            >
        </activity>

        <activity
                android:name=".ui.start.StartActivity"
                android:label="@string/app_name"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver
                android:name=".gcm.GcmBroadcastReceiver"
                android:permission="com.google.android.c2dm.permission.SEND"
                android:exported="false"
                >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.example.gcm"/>
            </intent-filter>
        </receiver>

        <service
                android:exported="false"
                android:name=".service.CheckService"/>
        <service android:name=".gcm.GcmIntentService"
                 android:exported="false"
                />
    </application>
</manifest>
