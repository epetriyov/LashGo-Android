<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lashgo.android">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- GCM Permissions-->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <permission android:name="com.lashgo.android.permission.C2D_MESSAGE"
                android:protectionLevel="signature"/>
    <uses-permission android:name="com.lashgo.android.permission.C2D_MESSAGE"/>

    <application
            android:name=".LashgoApplication"
            android:icon="@drawable/ic_logo"
            android:label="@string/app_name"
            android:theme="@style/Theme.Styled"
            >

        <meta-data
                android:name="com.facebook.sdk.ApplicationId"
                android:value="@string/facebook_app_id"/>

        <activity android:name="com.facebook.LoginActivity"
                  android:label="@string/login"
                />
        <activity android:name="com.vk.sdk.VKOpenAuthActivity"/>
        <activity android:name=".ui.auth.LoginActivity"
                  android:launchMode="singleTask"
                >
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                        android:host="twitter"
                        android:scheme="check"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity"/>
        <activity android:name=".ui.start.SplashActivity"/>
        <activity android:name=".ui.check.CheckInfoActivity"
                  android:label="@string/task"
                />
        <activity
                android:name=".ui.start.StartActivity"
                android:label="@string/app_name"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver
                android:name=".gcm.GcmBroadcastReceiver"
                android:permission="com.google.android.c2dm.permission.SEND"
                android:exported="false"
                >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.example.gcm"/>
            </intent-filter>
        </receiver>

        <service
                android:exported="false"
                android:name=".service.CheckService"/>
        <service android:name=".gcm.GcmIntentService"
                 android:exported="false"
                />
    </application>
</manifest>
