<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Styled" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Setting values in the android namespace affects API levels 14+ -->
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:editTextStyle">@style/EditText.Styled</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:titleTextStyle">@style/Widget.Styled.ActionBar.TitleText</item>
        <!-- Setting values in the android namespace affects API levels 14+ -->
    </style>

    <style name="EditText.Styled" parent="@android:style/Widget.EditText">
        <item name="android:inputType">textFilter|textNoSuggestions|textVisiblePassword</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>
    <style name="Widget.Styled.ActionBar.TitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>