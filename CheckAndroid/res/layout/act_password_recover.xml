<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res/com.lashgo.android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingTop="@dimen/action_bar_height"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <com.lashgo.android.ui.views.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recover_email"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="47dp"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:textColor="@color/gray"
                app:fontName="@string/regular"

                />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="16dp"
                      android:paddingTop="40dp"
                      android:paddingRight="16dp"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentTop="true"
                      android:id="@+id/email_layout"
                >
            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                       android:id="@+id/icon_email"
                       android:src="@drawable/mail"
                    />
            <com.lashgo.android.ui.views.RobotoEditText
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/edit_email"
                    android:layout_marginLeft="32dp"
                    android:hint="@string/hint_email"
                    app:fontName="@string/regular"
                    />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/dialog_progress"/>
</FrameLayout>