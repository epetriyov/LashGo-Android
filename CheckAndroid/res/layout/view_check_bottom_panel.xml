<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.lashgo.android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="48dp">
    <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_weight="1"
            >
        <ImageView
                android:id="@+id/btn_share"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/btn_share"
                />
        <com.lashgo.android.ui.views.RobotoTextView
                android:id="@+id/shares_count"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontName="@string/condensed_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="38"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/likes_layout"
            >
        <ImageView
                android:id="@+id/btn_likes"
                android:layout_width="48dp" android:layout_height="match_parent"
                android:src="@drawable/ic_like"
                />
        <com.lashgo.android.ui.views.RobotoTextView
                android:id="@+id/likes_count"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:fontName="@string/condensed_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="231"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/comments_layout"
            >
        <ImageView
                android:id="@+id/btn_comments"
                android:layout_width="48dp" android:layout_height="match_parent"
                android:src="@drawable/ic_comments"
                />
        <com.lashgo.android.ui.views.RobotoTextView
                android:id="@+id/comments_count"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:fontName="@string/condensed_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="19"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/time_layout"
            >
        <ImageView android:layout_width="20dp" android:layout_height="match_parent"
              android:src="@drawable/time"
                />
        <com.lashgo.android.ui.views.RobotoTextView
                android:id="@+id/check_time"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:fontName="@string/condensed_regular"
                android:textSize="16sp"
                android:textColor="@color/check_time_color_2"
                android:text="11:24"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_weight="1"
            >
        <ImageView
                android:id="@+id/btn_peoples_count"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_mob_normal"

                />
        <com.lashgo.android.ui.views.RobotoTextView
                android:id="@+id/peoples_count"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontName="@string/condensed_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="17"
                />
    </LinearLayout>
</LinearLayout>