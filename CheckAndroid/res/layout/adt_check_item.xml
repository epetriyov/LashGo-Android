<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.lashgo.android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="27dp"
                android:paddingLeft="18dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:background="@drawable/card"
        >
    <ImageView
            android:id="@+id/check_icon"
            android:layout_width="92dp" android:layout_height="92dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:src="@android:drawable/ic_dialog_email"
            />
    <com.lashgo.android.ui.views.RobotoTextView
            android:id="@+id/check_name"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="21sp"
            android:textColor="@color/drawer_item_normal"
            android:text="Нарисуй себе усы"
            app:fontName="@string/regular"
            />
    <com.lashgo.android.ui.views.RobotoTextView
            android:id="@+id/check_description"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_below="@id/check_name"
            android:layout_toLeftOf="@id/check_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum"
            app:fontName="@string/regular"
            android:textSize="14sp"
            android:textColor="@color/vote_check_description_color"
            />
    <com.lashgo.android.ui.views.RobotoTextView
            android:id="@+id/check_remaining_time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/check_icon"
            android:text="11:24"
            android:textColor="@color/check_time_color"
            android:textSize="15sp"
            app:fontName="@string/condensed_regular"
            />
</RelativeLayout>